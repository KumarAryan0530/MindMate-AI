# MindMate Docker Environment Variables
# Copy this to .env and fill in your actual values

# Django Settings
SECRET_KEY=
DEBUG=
ALLOWED_HOSTS=

# Redis (automatically configured in docker-compose)
# When running services on the host (not inside Docker), use localhost so
# host processes can resolve and connect to the container's published port.
REDIS_URL=redis://127.0.0.1:6379/0

# Google Gemini AI API
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Cloudflare AI API
# Get your credentials from: https://dash.cloudflare.com/
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Twilio Configuration
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ElevenLabs Configuration
# Get API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=

# Ngrok URL for local development (WebSocket webhooks)
# Run: ngrok http 8000 and paste the https URL here
NGROK_URL= 

# Media Files
MEDIA_ROOT=media/
MEDIA_URL=/media/

# Database (SQLite is used by default, no configuration needed)
# For PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://user:password@postgres:5432/safemind_db

# Redis Configuration
# REDIS_URL=redis://localhost:6379/0

# Allowed Hosts (required for WebSocket connections)
ALLOWED_HOSTS=localhost,127.0.0.1,"enter the ngrok url".ngrok-free.app,.ngrok-free.app
